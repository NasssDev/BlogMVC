{  
  "routes": [
    {
      "src": "/views/assets/(.*)",
      "dest": "public/$1/$2/$3"
    },
    {
      "src": "/upload/(.*)",
      "dest": "public/$1/$2"
    },
    { 
      "src": "/(.*)",
      "dest": "/api/index.php"
    }
  ],
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.6.0"
    }
  }
}

